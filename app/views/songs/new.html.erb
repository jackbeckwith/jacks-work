<%= form_for(@song) do |f| %> 
	<div class="field">
		<p>title</p>
		<%= f.text_field :title %> 
	</div>
	<div class="field"> 
		<p>genre</p>
		<%= f.text_field :genre %> 
	</div>
	<div class="field"> 
		<p>user</p>
		<%= f.hidden_field :user_id, :value => current_user.id %> 
	</div>
	<div class="actions"> 
		<%= f.submit %>
	</div> 
<% end %>