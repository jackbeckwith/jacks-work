<%= form_for @song, :html => { :multipart => true } do |f| %>
	<div class="form">
		<h2>Edit Your Song</h2>
		<div class="field">Title
			<div class="blank"><%= f.text_field :title %></div> 
		</div>
		<div class="field">Genre
			<%= f.select :genre, options_for_select([["Rap", "Rap"], ["Rock", "Rock"], ["Electronic", "Electronic"], ["Trap", "Trap"], ["Alternative", "Alternative"], ["Jazz", "Jazz"]]) %> 
		</div>
   		<div class="file-field">MP3 File
			<%= f.file_field :audio %>
		</div>
		<div class="button2"> 
			<%= f.submit %>
		</div>
    	<div class="error-msg"> 
			<% if @song.errors.any? %> 
				<% @song.errors.full_messages.each do |msg| %> 
					<li><%= msg %></li>
 				<% end %> 
 			<% end %> 
		</div>
	</div>  
<% end %>