<%= form_for(@song) do |f| %> 
	<div class="field">
		<p>Title</p>
		<%= f.text_field :title %> 
	</div>
	<div class="field"> 
		<p>Genre</p>
		<%= f.text_field :genre %> 
	</div>
	<div>
		<p>Audio File</p>
	</div>
	<div class="actions"> 
		<%= f.submit %>
	</div>
    <div class="error-msg"> 
		<% if @song.errors.any? %> 
		<ul> 
			<% @song.errors.full_messages.each do |msg| %> 
			<li><%= msg %></li>
 			<% end %> 
 		</ul> 
 		<% end %> 
	</div>  
<% end %>
