<!DOCTYPE html>
<html>
	<head>
  		<title>Collab With Me</title>
  			<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
 			<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  			<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar">
			<ul class="nav">
				<% if user_signed_in? %>
				<li>
					<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
				</li>
				<% else %>
				<li>
					<%= link_to("Login", new_user_session_path) %>
				</li>
				<% end %>
				<div id="text-link">
					<li><a class="nav-link"><%=link_to "Create New User", new_user_registration_path %></a></li>	
					<li><a class="nav-link"> <%=link_to "View All Users", users_path%></a></li>
					<li><a class="nav-link"><%=link_to "Upload New Song", new_song_path%></a></li>
					<li><a class="nav-link"><%=link_to "View all Songs", songs_path%></a></li>
				</div>
			</ul>
		</div>
		<div id="content">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
		<%= yield %>
	    </div>
	</body>
</html>
